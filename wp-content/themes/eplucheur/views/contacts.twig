{% extends "base.twig" %}

{% block head %}
	<title>{{ post.title }}</title>
{% endblock %}

{% block content %}
	<div class="rectangle8">

		<div class="container mod-container">

			<h1 class="text-center py-4">{{ post.title }}</h1>
			<div class="row">
				<div class="col-lg-6 mod-container8 px-lg-4">




					<img class="img-fluid" src="{{post.thumbnail.src}}" alt="">
					<h3 class="pr-5 py-4 pl-3 titre-asso ">{{ post.titre2 }}</h3>

					<div class="pr-5 pl-3 text-asso">


						{{ post.contenu }}
					</div>
				</div>

				<div class="col-lg-6 mod-container8 txt-prez py-5 px-lg-4">


					<div class="contenu">
						{{ post.content }}
					</div>
				</div>
			</div>

		</div>


	</div>
{% endblock %}
