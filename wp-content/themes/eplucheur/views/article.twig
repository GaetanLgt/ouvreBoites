{% extends "base.twig" %}

{% block head %}
	<title>{{ post.title }}</title>
{% endblock %}

{% block content %}

	<div id="fb-root"></div>
	<script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v8.0&appId=1692639077581112" nonce="kaxMxm67"></script>


	<div class="container-fluid rectangle9">

		{% if post.thumbnail.src is not empty %}
			<div class="imageTete" style="background-image : url('{{ post.thumbnail.src}}');"></div>
		{% endif %}
		<div class="container mod-container mod-container2 pt-3">
			<div class="container-fluid " {% if post.thumbnail.src is empty %} style="min-height : 800px" {% endif %}>
				<div class="container text-center">

					<h1 class="py-4 text-center ">{{ post.title }}</h1>
					<div class="px-5 pb-5 rounded">

						<div class="contenu split text-left">
							{{ post.content }}
						</div>


					</div>

					<div class="fb-share-button text-center pb-5" data-href="{{post.link}}" data-layout="button" data-size="large">


						<a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{post.link}}&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a>


					</div>

				</div>
			</div>
		</div>
	</div>
	<section></div>
{% endblock %}

{% block footer %}{% endblock %}
