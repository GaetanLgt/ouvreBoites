{% extends "base.twig" %}

{% block head %}
	<title>Blog</title>
{% endblock %}

{% block content %}
	<div class="container-fluid rectangle9">
		<div class="warpper container mod-container pt-3">
			<div class="masonry2">
				{% set i = 0 %}
				{% for post in posts %}
					{% set i = i + 1 %}
					<figure class="item py-1">

						<div class="mod-container4">
							{% if post.thumbnail.src is not empty %}
							<div class="zeromarge pt-2 rounded" style="background-image: url('{{ Image(post.thumbnail.src)}}');background-position: {{ post.cadrage_de_limage_cadrage_horizontal }} {{ post.adrage_de_limage_cadrage_vertical }};"></div>
							{% endif %}
							<div class="titreActu pt-3 pb-2">
								<h4>
									 {{ post.title }}
								</h4>
								<p class="date">{{ post.post_date_gmt|date("d/m/Y", false) }}</p><br/>
							</div>
							<div class="text-asso poleDesc ">
								<p class="Siglight petit ">{{ post.content|truncate(70) }}</p>
								<div class="d-flex align-items-end container mod-container5 ">


									<a class="liensnoir" href="{{post.link }}">
										<span class="point d-flex ">...</span>
									</a>
								</div>
							</div>
						</div>
					</figure>

				{% endfor %}
			</div>
		</div>
	</div>
</section>{% endblock %}
